	ЕСТЬNULL(Рег70.СуммаПродажи, 0) КАК СуммаПродажи,
	ЕСТЬNULL(Рег70.СуммаПродажиНУ, 0) КАК СуммаПродажиНУ,
	ЕСТЬNULL(РегНДС.СуммаНДС, 0) КАК СуммаНДС,
	ЕСТЬNULL(РегНДС.СуммаНДСНУ, 0) КАК СуммаНДСНУ,
	ЕСТЬNULL(Рег90.Себестоимость, 0) КАК Себестоимость,
	ЕСТЬNULL(Рег90.СебестоимостьНУ, 0) КАК СебестоимостьНУ,
	ЕСТЬNULL(Рег70.СуммаПродажи, 0) - ЕСТЬNULL(РегНДС.СуммаНДС, 0) - ЕСТЬNULL(Рег90.Себестоимость, 0) КАК Разница,
	ЕСТЬNULL(Рег70.СуммаПродажиНУ, 0) - ЕСТЬNULL(РегНДС.СуммаНДСНУ, 0) - ЕСТЬNULL(Рег90.СебестоимостьНУ, 0) КАК РазницаНУ,
	ВЫБОР
		КОГДА ЕСТЬNULL(Рег70.СуммаПродажи, 0) &lt; ЕСТЬNULL(РегНДС.СуммаНДС, 0) + ЕСТЬNULL(Рег90.Себестоимость, 0)
				ИЛИ ЕСТЬNULL(Рег70.СуммаПродажиНУ, 0) &lt; ЕСТЬNULL(РегНДС.СуммаНДСНУ, 0) + ЕСТЬNULL(Рег90.СебестоимостьНУ, 0)
			ТОГДА ИСТИНА
		ИНАЧЕ ЛОЖЬ
	КОНЕЦ КАК ПродажаНижеСебестоимости
ИЗ
