					<d5p1:item>
						<d5p1:lang>ru</d5p1:lang>
						<d5p1:content>ТМЦ</d5p1:content>
					</d5p1:item>
				</title>
			</field>
			<dataSource>ИсточникДанных1</dataSource>
			<query>ВЫБРАТЬ
	Рег.ДоговорКонтрагента КАК ДоговорКонтрагента,
	Рег.Событие КАК Событие,
	Рег.СтавкаНДС,
	ВЫБОР
		КОГДА Рег.ДляХозяйственнойДеятельности
			ТОГДА ВЫБОР
					КОГДА Рег.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.Облагаемая)
						ТОГДА ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_Облагаемая)
					КОГДА Рег.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.Необлагаемая)
						ТОГДА ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_НеоблагаемаяХозДеятельность)
					КОГДА Рег.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.ПропорциональноОблагаемая)
						ТОГДА ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_Пропорционально)
					ИНАЧЕ ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.ПустаяСсылка)
				КОНЕЦ
		ИНАЧЕ ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_НеоблагаемаяНеХозДеятельность)
	КОНЕЦ КАК ВидДеятельностиНДС,
	ВЫБОР
		КОГДА Рег.Событие = ЗНАЧЕНИЕ(Перечисление.СобытияПриобретенияНалоговыйУчет.ОплатаПоставщику)
			ТОГДА Рег.СуммаВзаиморасчетовОстаток
		КОГДА Рег.Событие = ЗНАЧЕНИЕ(Перечисление.СобытияПриобретенияНалоговыйУчет.ВозвратОплатыПоставщиком)
			ТОГДА -Рег.СуммаВзаиморасчетовОстаток
		КОГДА Рег.Событие = ЗНАЧЕНИЕ(Перечисление.СобытияПриобретенияНалоговыйУчет.ВозвратПоставщику)
			ТОГДА Рег.СуммаВзаиморасчетовОстаток
		КОГДА Рег.Событие = ЗНАЧЕНИЕ(Перечисление.СобытияПриобретенияНалоговыйУчет.ПоступлениеОтПоставщика)
			ТОГДА -Рег.СуммаВзаиморасчетовОстаток
		ИНАЧЕ Рег.СуммаВзаиморасчетовОстаток
	КОНЕЦ КАК СуммаВзаиморасчетовОстаток
ПОМЕСТИТЬ Рег
ИЗ
	РегистрНакопления.ПриобретенияНалоговыйУчет.Остатки(&amp;ДатаОтчета, ) КАК Рег
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег.ДоговорКонтрагента КАК ДоговорКонтрагента,
	Рег.СтавкаНДС КАК СтавкаНДС,
	Рег.ВидДеятельностиНДС,
	СУММА(Рег.СуммаВзаиморасчетовОстаток) КАК Сумма
ПОМЕСТИТЬ Рег2
ИЗ
	Рег КАК Рег

СГРУППИРОВАТЬ ПО
	Рег.ДоговорКонтрагента,
	Рег.СтавкаНДС,
	Рег.ВидДеятельностиНДС
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Бух.Счет,
	ЕСТЬNULL(Рег2.ДоговорКонтрагента, Бух.Договор) КАК ДоговорКонтрагента,
	ЕСТЬNULL(Рег2.СтавкаНДС, ЗНАЧЕНИЕ(Перечисление.СтавкиНДС.ПустаяСсылка)) КАК СтавкаНДС,
	ЕСТЬNULL(Рег2.ВидДеятельностиНДС, ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.ПустаяСсылка)) КАК ВидДеятельностиНДС,
	ЕСТЬNULL(Рег2.Сумма, 0) КАК Сумма,
	ЕСТЬNULL(Бух.СуммаОстаток, 0) КАК СуммаОстаток
ПОМЕСТИТЬ Рег3
ИЗ
	Рег2 КАК Рег2
		ВНУТРЕННЕЕ СОЕДИНЕНИЕ (ВЫБРАТЬ
			Рег.Счет КАК Счет,
			Рег.Субконто2 КАК Договор,
			Рег.СуммаОстаток КАК СуммаОстаток
		ИЗ
			РегистрБухгалтерии.Хозрасчетный.Остатки(&amp;ДатаОтчета, Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыПоВыданнымАвансамВНациональнойВалюте), , ) КАК Рег) КАК Бух
		ПО Рег2.ДоговорКонтрагента = Бух.Договор
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег3.Счет,
	Рег3.ДоговорКонтрагента.ТипДоговора КАК ТипДоговора,
	ВЫБОР
		КОГДА Рег3.ДоговорКонтрагента.ТипДоговора = ЗНАЧЕНИЕ(Перечисление.ТипДоговора.Товары)
			ТОГДА Рег3.ДоговорКонтрагента.ВидПосредника
		ИНАЧЕ ЗНАЧЕНИЕ(Перечисление.ВидПосредника.ПустаяСсылка)
	КОНЕЦ КАК ВидПосредника,
	Рег3.ДоговорКонтрагента.Номенклатура КАК ТМЦ,
	Рег3.ДоговорКонтрагента.Владелец КАК Контрагент,
	Рег3.ДоговорКонтрагента КАК ДоговорКонтрагента,
	Рег3.СтавкаНДС КАК СтавкаНДС,
	Рег3.ВидДеятельностиНДС КАК ВидДеятельностиНДС,
	Рег3.Сумма,
	Рег3.СуммаОстаток
ИЗ
	Рег3 КАК Рег3
ГДЕ
	(Рег3.СуммаОстаток &lt;&gt; 0
			ИЛИ Рег3.Сумма &lt;&gt; 0)</query>
		</dataSet>
		<totalField>
			<dataPath>Сумма</dataPath>
			<expression>Сумма(Сумма)</expression>
		</totalField>
		<totalField>
			<dataPath>СуммаОстаток</dataPath>
			<expression>Сумма(СуммаОстаток)</expression>
		</totalField>
		<parameter>
			<name>Период</name>
			<title xmlns:d4p1="http://v8.1c.ru/8.1/data/core" xsi:type="d4p1:LocalStringType">
				<d4p1:item>
					<d4p1:lang>ru</d4p1:lang>
					<d4p1:content>Период</d4p1:content>
				</d4p1:item>
			</title>
			<valueType>
				<Type xmlns="http://v8.1c.ru/8.1/data/core">xs:dateTime</Type>
				<DateQualifiers xmlns="http://v8.1c.ru/8.1/data/core">
					<DateFractions>DateTime</DateFractions>
				</DateQualifiers>
			</valueType>
			<value xsi:type="xs:dateTime">0001-01-01T00:00:00</value>
			<useRestriction>false</useRestriction>
		</parameter>
		<parameter>
			<name>ДатаОтчета</name>
			<title xmlns:d4p1="http://v8.1c.ru/8.1/data/core" xsi:type="d4p1:LocalStringType">
				<d4p1:item>
					<d4p1:lang>ru</d4p1:lang>
					<d4p1:content>Дата отчета</d4p1:content>
				</d4p1:item>
			</title>
			<valueType>
				<Type xmlns="http://v8.1c.ru/8.1/data/core">xs:dateTime</Type>
				<DateQualifiers xmlns="http://v8.1c.ru/8.1/data/core">
					<DateFractions>DateTime</DateFractions>
				</DateQualifiers>
			</valueType>
			<value xsi:type="xs:dateTime">0001-01-01T00:00:00</value>
			<useRestriction>true</useRestriction>
		</parameter>
