			<query>ВЫБРАТЬ
	Рег.СубконтоКт1 КАК Контрагент,
	Рег.СубконтоКт2 КАК Договор,
	Рег.СубконтоКт3 КАК ДокРасчетов,
	СУММА(Рег.ВалютнаяСуммаКт) КАК СуммаОплачено
ПОМЕСТИТЬ Оплачено
ИЗ
	РегистрБухгалтерии.Хозрасчетный.ДвиженияССубконто(
			,
			,
			СчетКт = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыСИностраннымиПокупателями)
				И НЕ ВалютаКт = ЗНАЧЕНИЕ(Справочник.Валюты.Гривна)
				И СубконтоКт3.Дата &gt;= ДАТАВРЕМЯ(2014, 1, 1)
				И (СчетДт = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.ТекущиеСчетаВИностраннойВалюте)
					ИЛИ СчетДт = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыСИностраннымиПокупателями)
					ИЛИ СчетДт = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыПоАвансамПолученнымВИностраннойВалюте)
						И Субконто1 = КорСубконто1
						И Субконто2 = КорСубконто2),
			,
			) КАК Рег

СГРУППИРОВАТЬ ПО
	Рег.СубконтоКт1,
	Рег.СубконтоКт2,
	Рег.СубконтоКт3
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег.СубконтоДт1 КАК Контрагент,
	Рег.СубконтоДт2 КАК Договор,
	Рег.СубконтоДт3 КАК ДокРасчетов,
	СУММА(Рег.ВалютнаяСуммаДт) КАК СуммаОтгружено
ПОМЕСТИТЬ Отгружено
ИЗ
	РегистрБухгалтерии.Хозрасчетный.ДвиженияССубконто(
			,
			,
			СчетДт = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыСИностраннымиПокупателями)
				И (СчетКт В ИЕРАРХИИ (ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.ДоходыОтРеализации))
					ИЛИ СчетКт В ИЕРАРХИИ (ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.ДругойОперационныйДоход)))
				И НЕ ВалютаДт = ЗНАЧЕНИЕ(Справочник.Валюты.Гривна)
				И СубконтоДт3.Дата &gt;= ДАТАВРЕМЯ(2014, 1, 1)
				И НЕ ВалютнаяСуммаДт = 0,
			,
			) КАК Рег

СГРУППИРОВАТЬ ПО
	Рег.СубконтоДт1,
	Рег.СубконтоДт2,
	Рег.СубконтоДт3
;

