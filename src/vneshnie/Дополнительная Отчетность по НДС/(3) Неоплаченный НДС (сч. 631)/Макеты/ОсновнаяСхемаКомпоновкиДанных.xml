;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	РегНак.ДоговорКонтрагента КАК Договор,
	РегНак.СтавкаНДС,
	РегНак.ВидДеятельностиНДС,
	ВЫБОР
		КОГДА РегНак.ДляХозяйственнойДеятельности
			ТОГДА ВЫБОР
					КОГДА РегНак.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.Облагаемая)
						ТОГДА ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_Облагаемая)
					КОГДА РегНак.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.ПропорциональноОблагаемая)
						ТОГДА ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_Пропорционально)
					ИНАЧЕ ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_НеоблагаемаяХозДеятельность)
				КОНЕЦ
		ИНАЧЕ ЗНАЧЕНИЕ(Справочник.НалоговыеНазначенияАктивовИЗатрат.НДС_НеоблагаемаяНеХозДеятельность)
	КОНЕЦ КАК НалоговоеНазначениеНДС,
	РегНак.СуммаВзаиморасчетовОстаток КАК Сумма,
	ОстаткиРегСвернуто.Сумма КАК СуммаРегСвернуто
ПОМЕСТИТЬ ОстаткиРег
ИЗ
	РегистрНакопления.ПриобретенияНалоговыйУчет.Остатки(&amp;Дата, Событие = ЗНАЧЕНИЕ(Перечисление.СобытияПриобретенияНалоговыйУчет.ПоступлениеОтПоставщика)) КАК РегНак
		ВНУТРЕННЕЕ СОЕДИНЕНИЕ ОстаткиРегСвернуто КАК ОстаткиРегСвернуто
		ПО РегНак.ДоговорКонтрагента = ОстаткиРегСвернуто.Договор
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	РегБух.Субконто2 КАК Договор,
	РегБух.СуммаОстатокКт КАК Сумма
ПОМЕСТИТЬ Остатки631
ИЗ
	РегистрБухгалтерии.Хозрасчетный.Остатки(&amp;Дата, Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыСОтечественнымиПоставщиками), , ) КАК РегБух
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Остатки631.Договор.Владелец КАК Контрагент,
	Остатки631.Договор,
	ЕСТЬNULL(ОстаткиРег.СтавкаНДС, ЗНАЧЕНИЕ(Перечисление.СтавкиНДС.НДС20)) КАК СтавкаНДС,
	ЕСТЬNULL(ОстаткиРег.ВидДеятельностиНДС, "ОШИБКА") КАК ВидДеятельностиНДС,
	ЕСТЬNULL(ОстаткиРег.НалоговоеНазначениеНДС, "ОШИБКА") КАК НалоговоеНазначениеНДС,
	ВЫБОР
		КОГДА Остатки631.Сумма = ЕСТЬNULL(ОстаткиРег.СуммаРегСвернуто, 0)
			ТОГДА ЕСТЬNULL(ОстаткиРег.Сумма, 0)
		ИНАЧЕ Остатки631.Сумма
	КОНЕЦ КАК СуммаНадо
ПОМЕСТИТЬ Остатки631СоСтавками
ИЗ
	Остатки631 КАК Остатки631
		ЛЕВОЕ СОЕДИНЕНИЕ ОстаткиРег КАК ОстаткиРег
		ПО Остатки631.Договор = ОстаткиРег.Договор
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег.Контрагент,
	Рег.Договор,
	Рег.СтавкаНДС,
	Рег.ВидДеятельностиНДС,
	Рег.НалоговоеНазначениеНДС,
	Рег.СуммаНадо КАК Сумма631,
	ВЫБОР
		КОГДА Рег.СтавкаНДС = ЗНАЧЕНИЕ(Перечисление.СтавкиНДС.НДС20)
			ТОГДА ВЫБОР
					КОГДА Рег.ВидДеятельностиНДС = "ОШИБКА"
						ТОГДА 0
					КОГДА Рег.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.Облагаемая)
						ТОГДА ВЫРАЗИТЬ(Рег.СуммаНадо / 6 КАК ЧИСЛО(12, 2))
					КОГДА Рег.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.ПропорциональноОблагаемая)
						ТОГДА ВЫРАЗИТЬ(&amp;Коэффициент * Рег.СуммаНадо / 6 КАК ЧИСЛО(12, 2))
					ИНАЧЕ 0
				КОНЕЦ
		ИНАЧЕ 0
	КОНЕЦ КАК СуммаНДС
ИЗ
	Остатки631СоСтавками КАК Рег</query>
