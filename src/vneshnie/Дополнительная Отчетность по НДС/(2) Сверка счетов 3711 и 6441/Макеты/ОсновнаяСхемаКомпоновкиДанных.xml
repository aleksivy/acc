	РегБух.СуммаОстатокДт КАК Сумма
ПОМЕСТИТЬ Остатки3711
ИЗ
	РегистрБухгалтерии.Хозрасчетный.Остатки(&amp;Дата, Счет = ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыПоВыданнымАвансамВНациональнойВалюте), , ) КАК РегБух
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Остатки3711.Договор.Владелец КАК Контрагент,
	Остатки3711.Договор,
	ЕСТЬNULL(ОстаткиРег.СтавкаНДС, ЗНАЧЕНИЕ(Перечисление.СтавкиНДС.НДС20)) КАК СтавкаНДС,
	ЕСТЬNULL(ОстаткиРег.ВидДеятельностиНДС, ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.Облагаемая)) КАК ВидДеятельностиНДС,
	ВЫБОР
		КОГДА Остатки3711.Сумма = ЕСТЬNULL(ОстаткиРег.СуммаРегСвернуто, 0)
			ТОГДА ЕСТЬNULL(ОстаткиРег.Сумма, 0)
		ИНАЧЕ Остатки3711.Сумма
	КОНЕЦ КАК СуммаНадо
ПОМЕСТИТЬ Остатки3711СоСтавками
ИЗ
	Остатки3711 КАК Остатки3711
		ЛЕВОЕ СОЕДИНЕНИЕ ОстаткиРег КАК ОстаткиРег
		ПО Остатки3711.Договор = ОстаткиРег.Договор
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег.Контрагент,
	Рег.Договор,
	Рег.СтавкаНДС,
	Рег.ВидДеятельностиНДС,
	Рег.СуммаНадо КАК Сумма3711,
	ВЫБОР
		КОГДА Рег.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.Облагаемая)
			ТОГДА ВЫБОР
					КОГДА Рег.СтавкаНДС = ЗНАЧЕНИЕ(Перечисление.СтавкиНДС.НДС20)
						ТОГДА ВЫРАЗИТЬ(Рег.СуммаНадо / 6 КАК ЧИСЛО(12, 2))
					КОГДА Рег.СтавкаНДС = ЗНАЧЕНИЕ(Перечисление.СтавкиНДС.НДС14)
						ТОГДА ВЫРАЗИТЬ(14 * Рег.СуммаНадо / 114 КАК ЧИСЛО(12, 2))
					ИНАЧЕ 0
				КОНЕЦ
		КОГДА Рег.ВидДеятельностиНДС = ЗНАЧЕНИЕ(Перечисление.ВидыДеятельностиНДС.ПропорциональноОблагаемая)
			ТОГДА ВЫРАЗИТЬ(&amp;Коэффициент * Рег.СуммаНадо / 6 КАК ЧИСЛО(12, 2))
		ИНАЧЕ 0
	КОНЕЦ КАК СуммаНДС
ПОМЕСТИТЬ СуммыНДС
ИЗ
	Остатки3711СоСтавками КАК Рег
;

