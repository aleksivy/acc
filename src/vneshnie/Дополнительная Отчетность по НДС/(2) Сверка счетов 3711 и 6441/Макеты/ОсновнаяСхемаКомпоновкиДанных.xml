	ЕСТЬNULL(СуммыНДС.Договор, Остатки6441.Договор) КАК Договор,
	СуммыНДС.СтавкаНДС,
	СуммыНДС.ВидДеятельностиНДС,
	ЕСТЬNULL(СуммыНДС.Сумма3711, 0) КАК Сумма3711,
	ЕСТЬNULL(СуммыНДС.СуммаНДС, 0) КАК СуммаНДС,
	ЕСТЬNULL(Остатки6441.Сумма, 0) КАК Сумма6441,
	ВЫБОР
		КОГДА ЕСТЬNULL(СуммыНДС.СуммаНДС, 0) = ЕСТЬNULL(Остатки6441.Сумма, 0)
			ТОГДА ИСТИНА
		ИНАЧЕ ЛОЖЬ
	КОНЕЦ КАК СуммыСовпадают,
	ЕСТЬNULL(СуммыНДС.СуммаНДС, 0) - ЕСТЬNULL(Остатки6441.Сумма, 0) КАК Разница
ИЗ
	СуммыНДС КАК СуммыНДС
		ПОЛНОЕ СОЕДИНЕНИЕ Остатки6441 КАК Остатки6441
		ПО СуммыНДС.Договор = Остатки6441.Договор</query>
