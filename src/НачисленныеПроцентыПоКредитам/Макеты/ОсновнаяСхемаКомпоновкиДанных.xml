////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	Рег.Субконто1 КАК Банк,
	Рег.Субконто2 КАК Договор,
	Рег.Субконто3 КАК ПлатежноеПоручение,
	Рег.Валюта КАК Валюта,
	Рег.СуммаОборотКт КАК СуммаПроцентов,
	Рег.ВалютнаяСуммаОборотКт КАК ВалютнаяСуммаПроцентов
ПОМЕСТИТЬ Обороты
ИЗ
	РегистрБухгалтерии.Хозрасчетный.Обороты(
			&amp;ДатаНач,
			КОНЕЦПЕРИОДА(&amp;Дата, ДЕНЬ),
			,
			Счет.Код = "6841"
				ИЛИ Счет.Код = "6842",
			,
			,
			КорСчет.Код = "951",
			) КАК Рег
;

////////////////////////////////////////////////////////////////////////////////
ВЫБРАТЬ
	ЕСТЬNULL(Остатки.Банк, Обороты.Банк) КАК Банк,
	ЕСТЬNULL(Остатки.Договор, Обороты.Договор) КАК Договор,
	ЕСТЬNULL(Остатки.ПлатежноеПоручение, Обороты.ПлатежноеПоручение) КАК ПлатежноеПоручение,
	ЕСТЬNULL(Остатки.Валюта, Обороты.Валюта) КАК Валюта,
	ЕСТЬNULL(Остатки.СуммаОстатокКредита, 0) КАК СуммаОстатокКредита,
	ЕСТЬNULL(Остатки.ВалютнаяСуммаОстатокКредита, 0) КАК ВалютнаяСуммаОстатокКредита,
	ЕСТЬNULL(Обороты.СуммаПроцентов, 0) КАК СуммаПроцентов,
	ЕСТЬNULL(Обороты.ВалютнаяСуммаПроцентов, 0) КАК ВалютнаяСуммаПроцентов
ПОМЕСТИТЬ Врем
ИЗ
	Остатки КАК Остатки
		ПОЛНОЕ СОЕДИНЕНИЕ Обороты КАК Обороты
		ПО Остатки.Банк = Обороты.Банк
			И Остатки.Договор = Обороты.Договор
			И Остатки.ПлатежноеПоручение = Обороты.ПлатежноеПоручение
			И Остатки.Валюта = Обороты.Валюта
;

