			<query>ВЫБРАТЬ
	Рег.Регистратор КАК Документ,
	Рег.СчетКт КАК Счет63,
	Рег.СубконтоКт1 КАК Контрагент,
	Рег.СубконтоКт2 КАК Договор,
	Рег.СчетДт КАК КорСчет,
	ВЫБОР
		КОГДА Рег.СчетДт.Код = "231"
				ИЛИ Рег.СчетДт.Код = "92"
				ИЛИ ПОДСТРОКА(Рег.СчетДт.Код, 1, 2) = "39"
			ТОГДА Рег.СубконтоДт2
		ИНАЧЕ Рег.СубконтоДт1
	КОНЕЦ КАК Аналитика,
	СУММА(Рег.СуммаОборот) КАК Сумма
ПОМЕСТИТЬ Суммы
ИЗ
	РегистрБухгалтерии.Хозрасчетный.ОборотыДтКт(
			&amp;НачалоПериода,
			&amp;КонецПериода,
			Регистратор,
			НЕ СчетДт В ИЕРАРХИИ (&amp;СписокСчетовИсключений)
				И НЕ СчетДт В ИЕРАРХИИ (ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.НалоговыйКредитВсего)),
			,
			СчетКт В ИЕРАРХИИ (ЗНАЧЕНИЕ(ПланСчетов.Хозрасчетный.РасчетыСПоставщикамиИПодрядчиками)),
			,
			) КАК Рег

СГРУППИРОВАТЬ ПО
	Рег.Регистратор,
	Рег.СчетКт,
	Рег.СубконтоКт1,
	Рег.СубконтоКт2,
	Рег.СчетДт,
	ВЫБОР
		КОГДА Рег.СчетДт.Код = "231"
				ИЛИ Рег.СчетДт.Код = "92"
				ИЛИ ПОДСТРОКА(Рег.СчетДт.Код, 1, 2) = "39"
			ТОГДА Рег.СубконтоДт2
		ИНАЧЕ Рег.СубконтоДт1
	КОНЕЦ
;

